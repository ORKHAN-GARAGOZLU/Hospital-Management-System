@model AboutSectionEditVM
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">About Section</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        TitleFirst
                                    </th>
                                    <th>
                                        TitleTwo
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @(Model.TitleFirst.Length > 30 ? Model.TitleFirst.Substring(0, 30) + "..." : Model.TitleFirst)
                                    </td>
                                    <td>
                                        @(Model.TitleTwo.Length > 30 ? Model.TitleTwo.Substring(0, 30) + "..." : Model.TitleTwo)
                                    </td>
                                    <td>
                                        @(Model.Description.Length > 30 ? Model.Description.Substring(0, 30) + "..." : Model.Description)
                                    </td>
                                    <td>
                                        <a asp-controller="AboutSection" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                            Edit
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
