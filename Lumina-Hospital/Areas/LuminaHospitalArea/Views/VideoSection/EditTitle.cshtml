@model VideoTitleEditVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit title</h4>

                    <form class="forms-sample" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group">
                            <label for="exampleInputUsername1">Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Name">
                            <span class="text-danger" asp-validation-for="Title"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Save</button>
                        <a class="btn btn-light" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationPartial"></partial>
}

