@model List<Department>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Department table</h4>
                    <p class="card-description">
                        <a class="btn btn-light" asp-controller="department" asp-action="create">Add department</a>
                    </p>
                    <div class="table-responsive pt-3">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Short Description
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Name
                                        </td>
                                        <td>
                                            @(item.ShortDescription.Length > 30 ? item.ShortDescription.Substring(0, 30) + "..." : item.ShortDescription)
                                        </td>
                                        <td>
                                            @(item.Description.Length > 30 ? item.Description.Substring(0, 30) + "..." : item.Description)
                                        </td>
                                        <td>
                                            <img width="200" src="~/assets/images/department-detail/@item.ImagePath"/>
                                        </td>
                                        <td>
                                            <a asp-controller="department" asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                Delete
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="department" asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                Edit
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="department" asp-action="detail" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                Detail
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


