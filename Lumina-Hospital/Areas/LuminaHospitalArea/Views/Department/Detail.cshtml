@model Department
@{
    ViewData["Title"] = "Detail";
}

@section CSS {
    <style>
        th, td {
            padding: 5px;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Department detail</h4>
                    <div class="table-responsive pt-3">

                        <table class="table-bordered">

                            <tbody>
                                <tr>
                                    <th scope="row">Title</th>
                                    <td>@Model.Name</td>

                                </tr>
                                <tr>
                                    <th scope="row">Short description</th>
                                    <td>@Model.ShortDescription</td>

                                </tr>
                                <tr>
                                    <th scope="row">Description</th>
                                    <td>@Model.Description</td>

                                </tr>
                                <tr>
                                    <th scope="row">Image</th>
                                    <td><img src="~/assets/images/department-detail/@Model.ImagePath" style="width: 200px;" /></td>

                                </tr>
                            </tbody>
                        </table>

                    </div>

                    <a class="mt-3 btn btn-light" asp-action="Index">Back to list</a>

                </div>
            </div>
        </div>
    </div>
</div>


