@model PatientTestimonialCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create testimonial</h4>

                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputUsername1">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Content</label>
                            <input asp-for="Content" class="form-control" placeholder="Content">
                            <span class="text-danger" asp-validation-for="Content"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail1">Position</label>
                            <input asp-for="Position" class="form-control" placeholder="Position">
                            <span class="text-danger" asp-validation-for="Position"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">ImagePath</label>
                            <input asp-for="ImagePath" class="form-control" placeholder="Name">
                            <span class="text-danger" asp-validation-for="ImagePath"></span>
                        </div>


                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a class="btn btn-light" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationPartial"></partial>
}


