@model Drug
@{
    ViewData["Title"] = "Index";
}

@section CSS {
    <style>
        th, td {
            padding: 5px;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Doctor detail</h4>
                    <div class="table-responsive pt-3">

                        <table class="table-bordered">

                            <tbody>
                                <tr>
                                    <th scope="row">Name</th>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <th scope="row">Price</th>
                                    <td>@Model.Price</td>
                                </tr>
                                <tr>
                                    <th scope="row">ShortDescription</th>
                                    <td>@Model.ShortDescription</td>
                                </tr>
                                <tr>
                                    <th scope="row">LongDescription</th>
                                    <td>@Model.LongDescription</td>
                                </tr>
                                <tr>
                                    <th scope="row">Stock</th>
                                    <td>@Model.InStock</td>
                                </tr>
                                
@*                                 <tr>
                                    <th scope="row">Main image</th>
                                    <td><img src="~/assets/images/products/@Model.DrugImages.FirstOrDefault(d => d.IsMain).ImagePath" style="width: 100px;" /></td>
                                </tr>
                                <tr>
                                    <th scope="row">Hover image</th>
                                    <td><img src="~/assets/images/products/@Model.DrugImages.FirstOrDefault(d => d.IsHover).ImagePath" style="width: 100px;" /></td>
                                </tr> *@
                                <tr>
                                    <th scope="row">Images</th>
                                    <td>
                                        @foreach (var item in Model.DrugImages)
                                        {
                                            <img src="~/assets/images/products/@Model.DrugImages.FirstOrDefault(d => d.Id == item.Id).ImagePath" style="width: 100px;" />

                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                    <a class="mt-3 btn btn-light" asp-action="Index">Back to list</a>

                </div>
            </div>
        </div>
    </div>
</div>


