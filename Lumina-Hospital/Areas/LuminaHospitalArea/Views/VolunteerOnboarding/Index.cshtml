@model List<VolunteerOnboarding>
@{
    ViewData["Title"] = "Index";
}



<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Volunteer onboarding table</h4>
                    <p class="card-description">
                        <a class="btn btn-light" asp-controller="volunteeronboarding" asp-action="create">Add title</a>
                        <a class="btn btn-light" asp-controller="volunteeronboarding" asp-action="CreateDetail">Add detail</a>
                    </p>
                    <div class="table-responsive pt-3">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Detail
                                    </th>


                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.Title
                                        </td>
                                        <td>
                                            <ol>
                                                @foreach (var point in item.VolunteerOnboardingPoints)
                                                {
                                                    <li>@(point.Detail.Length > 30 ? point.Detail.Substring(0, 30) + "..." : point.Detail)</li>
                                                }
                                            </ol>


                                        </td>


                                        <td>
                                            <a asp-controller="volunteeronboarding" asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                Delete
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="volunteeronboarding" asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                Edit
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="volunteeronboarding" asp-action="detail" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                Detail
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


