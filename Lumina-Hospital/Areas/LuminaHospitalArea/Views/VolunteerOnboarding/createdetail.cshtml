@model VolunteerOnboardingCreateVM

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">

        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create onboarding detail</h4>

                    <form class="forms-sample" method="post">

                        <div class="form-group">
                            <label for="exampleInputUsername1">Detail</label>
                            <input asp-for="Detail" class="form-control" placeholder="Detail">
                            <span class="text-danger" asp-validation-for="Detail"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">Select title</label>
                            <select asp-for="TitleId" class="form-control" asp-items="@ViewBag.TitleList">
                                <option selected>Title</option>
                            </select>
                            <span class="text-danger" asp-validation-for="TitleId"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a class="btn btn-light" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>


    </div>
</div>




