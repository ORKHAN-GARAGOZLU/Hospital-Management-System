@model UserEditVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit user </h4>

                    <form class="forms-sample" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">FullName</label>
                            <input asp-for="FullName" class="form-control" placeholder="FullName">
                            <span class="text-danger" asp-validation-for="FullName"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">UserName</label>
                            <input asp-for="UserName" class="form-control" placeholder="UserName">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Email">
                            <span class="text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">OldPassword</label>
                            <input asp-for="OldPassword" class="form-control" placeholder="OldPassword">
                            <span class="text-danger" asp-validation-for="OldPassword"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">NewPassword</label>
                            <input asp-for="NewPassword" class="form-control" placeholder="NewPassword">
                            <span class="text-danger" asp-validation-for="NewPassword"></span>
                        </div>



                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a class="btn btn-light" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationPartial"></partial>
}

