@model List<User>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User table</h4>
                    <p class="card-description">
                        <a class="btn btn-light" asp-controller="user" asp-action="create">Add user</a>
                    </p>
                    <form asp-action="index">
                        <input name="search" type="text" />
                        <button type="submit">Search</button>
                    </form>
                    <div class="table-responsive pt-3">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        FullName
                                    </th>
                                    <th>
                                        UserName
                                    </th>
                                    <th>
                                        Email
                                    <th>
                                    <th colspan="4" class="text-center">
                                        Setting
                                    <th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @item.FullName
                                        </td>
                                        <td>
                                            @item.UserName
                                        </td>
                                        <td>
                                            @item.Email
                                        </td>

                                        <td>
                                            @if (User.Identity.Name == item.UserName)
                                            {
                                                <a asp-controller="user" asp-action="delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                    Delete
                                                </a>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="user" asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                Edit
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="user" asp-action="detail" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                Detail
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="role" asp-action="edit" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                                Role edit
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>