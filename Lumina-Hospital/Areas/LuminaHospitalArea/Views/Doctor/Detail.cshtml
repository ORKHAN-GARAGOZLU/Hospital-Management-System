@model Doctor
@{
    ViewData["Title"] = "Index";
}

@section CSS {
    <style>
        th, td {
            padding: 5px;
        }
    </style>
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Doctor detail</h4>
                    <div class="table-responsive pt-3">

                        <table class="table-bordered">

                            <tbody>
                                <tr>
                                    <th scope="row">Name</th>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <th scope="row">Position</th>
                                    <td>@Model.Position</td>
                                </tr>
                                <tr>
                                    <th scope="row">Salary</th>
                                    <td>@Model.DoctorBios.Salary</td>
                                </tr>
                                <tr>
                                    <th scope="row">Faculty</th>
                                    <td>@Model.DoctorBios.Faculty</td>
                                </tr>
                                <tr>
                                    <th scope="row">Degree</th>
                                    <td>@Model.DoctorBios.Degree</td>
                                </tr>
                                <tr>
                                    <th scope="row">Experience</th>
                                    <td>@Model.DoctorBios.Experience</td>
                                </tr>
                                <tr>
                                    <th scope="row">Mail</th>
                                    <td>@Model.DoctorBios.Mail</td>
                                </tr>
                                <tr>
                                    <th scope="row">CallNumber</th>
                                    <td>@Model.DoctorBios.CallNumber</td>
                                </tr>
                                <tr>
                                    <th scope="row">Summary</th>
                                    <td>@Model.DoctorBios.Summary</td>
                                </tr>
                                <tr>
                                    <th scope="row">Image</th>
                                    <td><img src="~/assets/images/doctor/@Model.ImagePath" style="width: 200px;" /></td>
                                </tr>
                            </tbody>
                        </table>

                    </div>

                    <a class="mt-3 btn btn-light" asp-action="Index">Back to list</a>

                </div>
            </div>
        </div>
    </div>
</div>


