@model DoctorEditVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit doctor</h4>

                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label for="exampleInputUsername1">Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Name">
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Position</label>
                            <input asp-for="Position" class="form-control" placeholder="Position">
                            <span class="text-danger" asp-validation-for="Position"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Salary</label>
                            <input asp-for="Salary" class="form-control" placeholder="Title">
                            <span class="text-danger" asp-validation-for="Salary"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Faculty</label>
                            <input asp-for="Faculty" class="form-control" placeholder="Faculty">
                            <span class="text-danger" asp-validation-for="Faculty"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Degree</label>
                            <input asp-for="Degree" class="form-control" placeholder="Degree">
                            <span class="text-danger" asp-validation-for="Degree"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Mail</label>
                            <input asp-for="Mail" class="form-control" placeholder="Mail">
                            <span class="text-danger" asp-validation-for="Mail"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">CallNumber</label>
                            <input asp-for="CallNumber" class="form-control" placeholder="CallNumber">
                            <span class="text-danger" asp-validation-for="CallNumber"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Experience</label>
                            <input asp-for="Experience" class="form-control" placeholder="Experience">
                            <span class="text-danger" asp-validation-for="Experience"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1">Summary</label>
                            <textarea asp-for="Summary" class="form-control" placeholder="Summary"></textarea>
                            <span class="text-danger" asp-validation-for="Summary"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ImagePath">Photo</label>
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="~/assets/images/doctor/@Model.ImagePath" alt="Image" class="img-thumbnail" style="max-width: 300px; max-height: 300px;" />
                            }
                            <input asp-for="Photo" type="file" class="form-control" />
                            <span class="text-danger" asp-validation-for="Photo"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1">Edit Department</label>
                            <select asp-for="DepartmentId" class="form-control" asp-items="@ViewBag.Departments">
                                <option selected>Department</option>
                            </select>
                            <span class="text-danger" asp-validation-for="DepartmentId"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Save</button>
                        <a class="btn btn-light" asp-action="Index">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationPartial"></partial>
}

