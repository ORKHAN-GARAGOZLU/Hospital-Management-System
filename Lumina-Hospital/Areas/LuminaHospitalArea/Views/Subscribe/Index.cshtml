@model SubscribeSection
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Subscribe section</h4>
                    <div class="table-responsive pt-3">
                        <table class="table table-hover table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Short Description
                                    </th>
                                    <th>
                                        Long Description
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @(Model.Title.Length > 30 ? Model.Title.Substring(0, 30) + "..." : Model.Title)
                                    </td>
                                    <td>
                                        @(Model.ShortDescription.Length > 30 ? Model.ShortDescription.Substring(0, 30) + "..." : Model.ShortDescription)
                                    </td>
                                    <td>
                                        @(Model.LongDescription.Length > 30 ? Model.LongDescription.Substring(0, 30) + "..." : Model.LongDescription)
                                    </td>
                                    <td>
                                        <a asp-controller="subscribe" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                            Edit
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
