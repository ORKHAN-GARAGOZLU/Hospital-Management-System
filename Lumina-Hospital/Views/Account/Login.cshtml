@model LoginVM

<!--Start Login Section-->

<div class="login-bg" style="background-image: url(../assets/images/login/Untitled\ design.png);">
	<div class="container">
		<div class="col-md-12">
			<form class="form-horizontal login-items" role="form" action="#" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="row">
					<div class="col-md-12">
						<h1>Login</h1>
					</div>
				</div>
				<div class="row">
					<div class="part col-md-6">
						<div class="form-group">
							<div class="col-md-12">
								<label for="username" class="control-label">Username or Email</label>
								<div class="input-items">
									<i class="fa fa-user"></i>
									<input asp-for="UserNameOrEmail" class="form-control" placeholder="">
									<span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								<label for="password" class="control-label">Password</label>
								<div class="input-items">
									<i class="fa fa-lock"></i>
									<i class="fa fas fa-eye show-password"></i>
									<input asp-for="Password" class="form-control password-input"  placeholder="">
									<span asp-validation-for="Password" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								<div class="checkbox">
									<label>
										<input asp-for="RememberMe" type="checkbox"> Remember me
									</label>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								@* <input type="submit" value="LOG IN" class="btn-cross"> *@
								<button type="submit" class="btn-cross">SIGN IN</button>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								<a asp-action="forgetpassword">Forgot password?</a>
							</div>
						</div>
					</div>
					<div class="right-side col-md-6">

						<div class="login-sign-in">
							<label>
								One-click sign in using other services.
							</label>
							<a href=""><i class="fa fa-brands fa-facebook"></i> Sign in with Facebook</a>
							<a href=""><i class="fa fa-brands fa-twitter"></i> Sign in with Twitter</a>
							<a href=""><i class="fa fa-brands fa-google"></i> Sign in with Google</a>
						</div>

					</div>
				</div>
			</form>
		</div>
	</div>
</div>

<!-- End Login Section -->