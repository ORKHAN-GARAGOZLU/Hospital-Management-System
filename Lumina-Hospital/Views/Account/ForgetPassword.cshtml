@model ForgetPasswordVM

<!--Start Login Section-->

<div class="login-bg" style="background-image: url(../assets/images/login/Untitled\ design.png);">
	<div class="container">
		<div class="col-md-12">
			<form class="form-horizontal login-items" role="form" action="#" method="post">
				<div class="row">
					<div class="col-md-12">
						<h1>Forget Password</h1>
					</div>
				</div>
				<div class="row">
					<div class="part col-md-6">
						
						<div class="form-group">
							<div class="col-md-12">
								<label asp-for="appUser.Email" class="control-label">Please enter your email</label>
								<div class="input-items">
									<i class="fa fa-solid fa-envelope"></i>
									<input asp-for="appUser.Email" class="form-control password-input" placeholder="">
									<span class="text-danger">
										@Html.ValidationMessage("Error")
									</span>
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="col-md-12">
								@* <input type="submit" value="LOG IN" class="btn-cross"> *@
								<button type="submit" class="btn-cross">Send</button>
							</div>
						</div>
						
					</div>
					<div class="right-side col-md-6">

						<div class="login-sign-in">
							<label>
								One-click sign in using other services.
							</label>
							<a href=""><i class="fa fa-brands fa-facebook"></i> Sign in with Facebook</a>
							<a href=""><i class="fa fa-brands fa-twitter"></i> Sign in with Twitter</a>
							<a href=""><i class="fa fa-brands fa-google"></i> Sign in with Google</a>
						</div>

					</div>
				</div>
			</form>
		</div>
	</div>
</div>

<!-- End Login Section -->



