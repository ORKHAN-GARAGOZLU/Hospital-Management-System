@model RegisterVM


<!-- Register Section-->

<div class="login-bg" style="background-image: url(../assets/images/login/Untitled\ design.png);">
	<div class="container">
		<div class="col-md-12">
			<form class="form-horizontal login-items" role="form" action="#" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="row">
					<div class="col-md-12">
						<h1>Register</h1>
					</div>
				</div>
				<div class="row">
					<div class="part col-md-6">
						<div class="form-group">
							<div class="col-md-12">
								<label for="username" class="control-label">Fullname</label>
								<div class="input-items">
									<i class="fa fa-user"></i>
									<input asp-for="FullName" class="form-control" placeholder="">
									<span asp-validation-for="FullName" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								<label for="username" class="control-label">Username</label>
								<div class="input-items">
									<i class="fa fa-user"></i>
									<input asp-for="UserName" class="form-control" placeholder="">
									<span asp-validation-for="UserName" class="text-danger"></span>

								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								<label for="password" class="control-label">Email</label>
								<div class="input-items">
									<i class="fa fa-solid fa-envelope"></i>
									<input asp-for="Email" class="form-control" placeholder="">
									<span asp-validation-for="Email" class="text-danger"></span>

								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								<label for="password" class="control-label">Password</label>
								<div class="input-items">
									<i class="fa fa-lock"></i>
									<i class="fa fas fa-eye show-password"></i>
									<input asp-for="Password" type="password" class="form-control password-input" placeholder="">
									<span asp-validation-for="Password" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								<label for="password" class="control-label">Confirm Password</label>
								<div class="input-items">
									<i class="fa fa-lock"></i>
									<i class="fa fas fa-eye show-password"></i>
									<input asp-for ="ConfirmPassword" type="password" class="form-control password-input"  placeholder="">
									<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								<div class="checkbox">
									<label asp-for="Terms">
										<input asp-for="Terms"> I agree to all Terms & Conditions
										<span asp-validation-for="Terms" class="text-danger"></span>
									</label>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								@* <input type="submit" value="REGISTER" class="btn-cross"> *@
								<button type="submit" class="btn-cross">REGISTER</button>
							</div>
						</div>
						<div class="form-group">
							<div class="col-md-12">
								<a asp-controller="account" asp-action="login">Already have an account?</a>
							</div>
						</div>
					</div>
					<div class="right-side col-md-6">
						<div class="login-sign-in">
							<label>
								One-click sign in using other services.
							</label>
							<a asp-controller="account" asp-action="facebooklogin"><i class="fa fa-brands fa-facebook"></i> Sign in with Facebook</a>
							<a><i class="fa fa-brands fa-twitter"></i> Sign in with Twitter</a>
							<a asp-controller="account" asp-action="googlelogin"><i class="fa fa-brands fa-google"></i> Sign in with Google</a>
						</div>

					</div>
				</div>
			</form>
		</div>
	</div>
</div>

<!-- End Register Section -->