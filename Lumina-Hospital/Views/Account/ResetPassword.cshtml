@model ForgetPasswordVM

<!--Start Login Section-->

<div class="login-bg" style="background-image: url(../assets/images/login/Untitled\ design.png);">
	<div class="container">
		<div class="col-md-12">
			<form class="form-horizontal login-items" role="form" action="#" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="row">
					<div class="col-md-12">
						<h1>Reset Password</h1>
					</div>
				</div>
				<div class="row">
					<div class="part col-md-6">

						<div class="form-group">
							<div class="col-md-12">
								<label for="password" class="control-label">Password</label>
								<div class="input-items">
									<i class="fa fa-lock"></i>
									<i class="fa fas fa-eye show-password"></i>
									<input asp-for="Password" class="form-control password-input" placeholder="">
									<span asp-validation-for="Password" class="text-danger"></span>
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="col-md-12">
								<label for="password" class="control-label">Confirm Passwod</label>
								<div class="input-items">
									<i class="fa fa-lock"></i>
									<i class="fa fas fa-eye show-password"></i>
									<input asp-for="ConfirmPasswod" class="form-control password-input" placeholder="">
									<span asp-validation-for="ConfirmPasswod" class="text-danger"></span>
								</div>
							</div>
						</div>

						<div class="form-group">
							<div class="col-md-12">
								@* <input type="submit" value="LOG IN" class="btn-cross"> *@
								<button type="submit" class="btn-cross">Reset</button>
							</div>
						</div>

					</div>
					<div class="right-side col-md-6">

						<div class="login-sign-in">
							<label>
								One-click sign in using other services.
							</label>
							<a href=""><i class="fa fa-brands fa-facebook"></i> Sign in with Facebook</a>
							<a href=""><i class="fa fa-brands fa-twitter"></i> Sign in with Twitter</a>
							<a href=""><i class="fa fa-brands fa-google"></i> Sign in with Google</a>
						</div>

					</div>
				</div>
			</form>
		</div>
	</div>
</div>

<!-- End Login Section -->
