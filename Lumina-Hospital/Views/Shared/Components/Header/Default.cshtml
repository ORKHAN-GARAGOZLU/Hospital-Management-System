@model HomeVM

<!-- Subscribe popup start -->

<div class="container popup">
    <div class="subscribe-popup">
        <div class="bg-image">
            <img width="800" src="~/assets/images/subscribe/subscribe-popup.jpg" alt="">

            <div class="subscribe-popup-items">

                <div class="d-flex justify-content-between">
                    <h1>Sign Up for Our Newsletter</h1>
                    <i class="pe-7s-close remove-popup"></i>
                </div>

                <p>
                    Get health tips from our experts, news about ground-breaking research, feel-good moments and ways to get involved with us delivered right to your inbox. Don't miss out on valuable insights – sign up now and have a dose of inspiration delivered right to your inbox!
                </p>

                <form action="" method="post">
                    <div class="d-flex">
                        <input type="email" name="email" autocomplete="off" id="email" placeholder="Your email address" required>
                        <button class="btn-cross" type="submit">Submit</button>
                    </div>
                </form>

            </div>

        </div>

    </div>
</div>

<!-- Subscribe popup end -->


<!-- Up start -->

<div class="up">
    <i class="fa fas fa-chevron-up"></i>
</div>

<!-- Up end -->


<!-- Drawer -->

<div class="drawer-d">
    <div class="d-flex justify-content-between">
        <a class="logo" href="index.html">
            <img width="150" src="~/assets/images/logo/@Model.Settings["DrawerLogo"]" alt="logo">
        </a>
        <i class="pe-7s-close close"></i>
    </div>

    <div class="drower-icon-list d-flex justify-content-around mt-3">
        <button class="site-search show-search bg-transparent" style="color: white;">
            <i class="search pe-7s-search"></i>
        </button>
        <a asp-controller="wishlist" asp-action="showwishlist"><i class="pe-7s-like"></i></a>
        <a asp-controller="basket" asp-action="showbasket"><i class="pe-7s-shopbag"></i></a>
    </div>

    <div class="mt-3">
        <div class="accordion">
            <div class="accordion-section">
                <button class="accordion-title">Account</button>
                <ul class="accordion-content">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a asp-area="LuminaHospitalArea" asp-controller="Dashboard" asp-action="Index" target="_blank">Admin</a>
                            </li>
                            <li>
                                <a asp-area="LuminaHospitalArea" asp-controller="request" asp-action="index" target="_blank">Requests</a>
                            </li>

                        }

                        <li><a asp-controller="account" asp-action="myaccount">My Account</a></li>
                        <li><a asp-controller="account" asp-action="logout">Logout</a></li>
                    }
                    <a asp-controller="account" asp-action="login"><li>Login</li></a>
                    <a asp-controller="account" asp-action="register"><li>Register</li></a>
                    
                </ul>
            </div>
            <div class="accordion-section">
                <button class="accordion-title">About Lumina</button>
                <ul class="accordion-content">
                    <a asp-controller="about" asp-action="index"><li>About Lumina Hospital</li></a>
                    <a asp-controller="gallery" asp-action="index"><li>Our Gallery</li></a>
                    <a asp-controller="volunteer" asp-action="index"><li>Volunteer</li></a>
                    <a asp-controller="department" asp-action="index"><li>Services</li></a>
                    <a asp-controller="about" asp-action="faq"><li>Faq</li></a>
                </ul>
            </div>
            <div class="accordion-section">
                <button class="accordion-title">Departments & Conditions</button>
                <ul class="accordion-content">
                    @foreach (var item in Model.Departments)
                    {
                        <li><a asp-controller="department" asp-action="detail" asp-route-id="@item.Id">@item.Name</a></li>
                    }
                    
                </ul>
            </div>
            <div class="accordion-section">
                <button class="accordion-title"><a asp-controller="volunteer" asp-action="index">Volunteer</a></button>
            </div>
            <div class="accordion-section">
                <button class="accordion-title"><a asp-controller="doctor" asp-action="index">Find a doctor</a></button>
            </div>
            <div class="accordion-section">
                <button class="accordion-title"><a asp-controller="blog" asp-action="index">Blog</a></button>
            </div>
            <div class="accordion-section">
                <button class="accordion-title"><a asp-controller="product" asp-action="index">Our Products</a></button>
            </div>
            <div class="accordion-section">
                <button class="accordion-title"><a asp-controller="contact" asp-action="contactrequest">Contact Us</a></button>
            </div>
            <div class="accordion-section">
                <button class="accordion-title"><a asp-controller="appointment" asp-action="assignment">Make an appointment</a></button>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <div class="d-flex align-items-center column-gap-2"><i class="fa fa-solid fa-phone"></i><span>Tel: +994709070717</span></div>
        <div class="d-flex align-items-center column-gap-2"><i class="fa fa-solid fa-envelope"></i><span>luminahealth@gmail.com</span></div>
        <div class="d-flex align-items-center column-gap-2"><i class="fa fa-solid fa-globe"></i><span>wwww.lumina.com</span></div>
        <div class="d-flex align-items-center column-gap-2"><i class="fa fa-solid fa-location-arrow"></i><span>Nizami st.45</span></div>
    </div>

    <div class="d-flex mt-3 column-gap-4">
        <a href=""><i class="fs-4 fa fa-brands fa-facebook"></i></a>
        <a href=""><i class="fs-4 fa fa-brands fa-instagram"></i></a>
        <a href=""><i class="fs-4 fa fa-brands fa-whatsapp"></i></a>
        <a href=""><i class="fs-4 fa fa-brands fa-linkedin"></i></a>
    </div>


</div>

    </div>
<!--End Drawer -->


<!-- Shopping Drawer -->

<div class="shopping-drawer">
    <div class="d-flex justify-content-between">
        <h4>Shopping</h4>
        <i class="pe-7s-close close"></i>
    </div>

    <div class="shopping-results mt-5">

        <div class="d-flex flex-column gap-1 text-center">
            <a class="btn-cross" asp-controller="basket" asp-action="showbasket">View Cart</a>

            <a class="btn-cross" asp-controller="order" asp-action="order">Checkout</a>

            <a class="btn-cross" asp-controller="wishlist" asp-action="showwishlist">Wishlist</a>
        </div>

    </div>

</div>

<!-- Shopping Drawer -->


<!-- Search start -->

<div class="fix-search">
    <i class="pe-7s-close search-close"></i>
    <div class="search-header">
        <div class="logo">
            <img width="250" src="~/assets/images/logo/@Model.Settings["DrawerLogo"]" alt="">
        </div>
        <form name="search">
            <input type="search" id="search-input" autocomplete="off" placeholder="Search">

            <ul id="search-results" class="search-box">
            </ul>
        </form>
    </div>
</div>

<!--End Search -->


<!-- Header start -->

