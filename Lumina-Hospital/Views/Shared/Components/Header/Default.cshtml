                                        <li><a asp-controller="account" asp-action="register">Register</a></li>
                                    </ul>
                                </div>
                            </div>
                        </i>
                    </button>

                    <button class="shopping-bag bg-transparent">
                        <i class="pe-7s-shopbag"></i>
                    </button>

                    <button class="menu-icon bg-transparent">
                        <i class="pe-7s-menu"></i>
                    </button>
                </div>

            </div>
        </div>
    </div>
</header>

<!-- Header end -->
